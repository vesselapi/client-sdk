{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
